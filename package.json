{
  "name": "discuss",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "homepage": "/",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "postbuild": "react-snap",
    "deploy": "npm run build && npm run deploy:dapp",
    "deploy:test": "arweave package build/index.html build/packaged.html",
    "deploy:dapp": "arweave deploy build/packaged.html --key-file arweave-keyfile.json"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robin-thomas/discuss.git"
  },
  "author": "Robin Thomas <robinthomas2591@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/robin-thomas/discuss/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "arweave-deploy": "^1.5.1",
    "bootstrap": "^4.3.1",
    "husky": "^3.0.5",
    "lint-staged": "^9.3.0",
    "moment": "^2.24.0",
    "prettier": "^1.18.2",
    "react": "^16.9.0",
    "react-bootstrap": "^1.0.0-beta.12",
    "react-dom": "^16.9.0",
    "react-scripts": "^3.1.2",
    "react-snap": "1.10.0"
  },
  "dependencies": {}
}
